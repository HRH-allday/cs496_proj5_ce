{
  "manifest_version": 2,

  "name": "TechnoShot",
  "description": "This is an awesome screenshot extension for TechnoValley.",
  "version": "11.0.7",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click Here!",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://ec2-52-79-155-110.ap-northeast-2.compute.amazonaws.com:3000/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
